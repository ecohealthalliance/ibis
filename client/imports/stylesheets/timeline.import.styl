@import 'variables.import.styl'

.timeline-container
  .type-toggle
    top 0px
    position relative
    display flex
    flex-direction row
    margin 0 auto
    width 100%
    border-top 1px solid white
    border-bottom 1px solid white
    color silver
    .timeline-type
      &.active
        background-color white
        color $primary-color-light
        font-weight bold
      background-color $primary-color-light
      line-height 20px
      font-size 0.8em
      font-weight normal
      display inline-block
      flex-grow 1
      text-align center
      cursor pointer

.c3-tooltip
  color black
  th
    line-height 1.5
    color black

.c3 .c3-axis-x path,
.c3 .c3-axis-x line,

.c3 .c3-axis-y path
.c3 .c3-axis-y line
  stroke white


.c3 .c3-axis-x g,
.c3 .c3-axis-y g,
.c3 .c3-legend-item-data text
  fill whitesmoke

text.c3-title
  fill whitesmoke
