template(name='submitUserBioeventForm')
  .submit-bioevent
    input(value="{{currentUser.profile.name}}'s Ad Hoc Event").heading
    label Time Period:
    select.time-period
      option(value="now" selected) Next two weeks
      each availableFlightSimMonths
        option(value=this)=this
    .case-groups
      each caseGroups
        .case-group
          .btn.btn-danger.delete Delete
          label Location:
          +locationSelect
          label Number of Active Cases:
          input.active-cases.form-control
    .btn.btn-primary.add-case-group Add Case Group
    .btn.btn-success.analyze Analyze Bioevent Air Travel Risk
    .clear(style="clear:both;")
