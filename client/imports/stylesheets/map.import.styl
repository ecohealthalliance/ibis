@import 'variables.import.styl'

$subheader-height = 44px

.side-panel
  position absolute
  background-color white
  top 0
  bottom 0
  right 0
  width $side-panel-width
  z-index 1000
  .header
    background-color $primary-color
    height $subheader-height
    color white
    padding 10px

.bioevent-panel
  border-left 1px solid white

.map-page-container
  position absolute
  top $header-height
  right 0
  left 0
  bottom 0

#map
  position absolute
  left 0
  right 0
  top $subheader-height
  bottom 0

.map-controls
  display inline-block
  float right

.bioevent-item
  background-color $primary-color
  color white
  line-height 0
  margin-top 5px
  h6
    padding 10px
    margin-bottom 0
  .timeline
  .minimap
    margin 0
    display inline-block
    background $primary-color-light
    height 150px
    width 50%
  .minimap
    background lightblue
  
.bioevent-item:first-of-type
  margin-top 1px

.bioevent-items
  width 100%
  position absolute
  top $subheader-height
  bottom 0
  overflow-y scroll
  margin-bottom 0

//timeline
.bioevent-item
  .c3-tooltip
    color black
    th
      line-height 1.5
      color black

  .c3 .c3-axis-x path,
  .c3 .c3-axis-x line,
  
  .c3 .c3-axis-y path
  .c3 .c3-axis-y line
    stroke white
  
  
  .c3 .c3-axis-x g,
  .c3 .c3-axis-y g,
  .c3 .c3-legend-item-data text
    fill whitesmoke

  text.c3-title
    fill whitesmoke
