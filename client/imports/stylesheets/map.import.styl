@import 'variables.import.styl'

$subheader-height = 44px

.side-panel
  position absolute
  background-color white
  top 0
  bottom 0
  right 0
  width $side-panel-width
  z-index 1000
  .header
    background-color $primary-color
    height $subheader-height
    color white
    padding 10px

.bioevent-panel
  border-left 1px solid white

.bioevent-panel-title
  display inline-block

.map-page-container
  position absolute
  top $header-height
  right 0
  left 0
  bottom 0
  .leaflet-container
    background lightblue

#map
  position absolute
  left 0
  right 0
  top $subheader-height
  bottom 0

  .hover-marker
    color white
    text-shadow 1px 1px 1px rgba(0,0,0,.5)
    top -1em
    left 3em
    width 10em !important
    pointer-events none

.map-controls
.bioevent-controls
  display inline-block
  float right

.bioevent-item
  background-color $primary-color
  color white
  line-height 0
  margin-top 5px
  h6
    padding 10px
    margin-bottom 0
  a
    color white
  .timeline-container
  .minimap
    margin 0
    display inline-block
    background $primary-color-light
    height 150px
    width 50%
  .minimap
    background lightblue
  .timeline
    height 130px
  .timeline-container
    .type-toggle
      top 8px
      position relative
      display block
      margin 0 auto
      width 174px
      outline 1px solid lightgray
      .timeline-type
        &.active
          background-color white
          color $primary-color-light
        background-color $primary-color-light
        line-height 20px
        font-size 0.8em
        font-weight normal
        display inline-block
        width 84px
        text-align center
        cursor pointer

.bioevent-item:first-of-type
  margin-top 1px

.bioevent-items
  width 100%
  position absolute
  top $subheader-height
  bottom 0
  overflow-y scroll
  margin-bottom 0

//timeline
.bioevent-item
  .c3-tooltip
    color black
    th
      line-height 1.5
      color black

  .c3 .c3-axis-x path,
  .c3 .c3-axis-x line,
  
  .c3 .c3-axis-y path
  .c3 .c3-axis-y line
    stroke white
  
  
  .c3 .c3-axis-x g,
  .c3 .c3-axis-y g,
  .c3 .c3-legend-item-data text
    fill whitesmoke

  text.c3-title
    fill whitesmoke

.rank-data
  font-size .5em

.rank-score
  cursor pointer