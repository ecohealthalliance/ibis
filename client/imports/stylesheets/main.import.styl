@import 'variables.import.styl'
@import 'map.import.styl'
@import 'timeline.import.styl'

.subheader
  background-color $primary-color
  color white
  padding 10px 16px
  width "calc(100% - %s)" % $side-panel-width
  .title
    display inline-block

.tooltip-btn
  margin-left 8px
  &.help-showing
    visibility hidden
.tooltip-btn:link
.tooltip-btn:visited
  color white

.tooltip
  z-index 1001
  pointer-events none
  transition opacity .1s ease-out
  opacity 0
  background white
  border 1px solid gray
  border-radius 2px
  padding 5px
  width 200px

.tooltip.hide
  opacity 0

.tooltip.show
  opacity 1

.about-content
  background lightblue
  padding 1em
  max-width 800px
  margin 12px
  margin-top 0
  font-size 1em
  h1
    font-size 1.8em
    color $primary-color
    margin-bottom 1em
    // font-weight bold
  h2
    font-size 1.3em
    color $primary-color
  h3
    font-size 1em
    font-weight bold
    color $primary-color

footer
  border-top 2px solid $secondary
  background white
  padding 1em 2%
  .contact-info
    margin-left auto
    font-weight 300
    list-style-type none
    padding-left 0
  a
    color $primary

.side-panel
  position absolute
  background-color white
  top 0
  bottom 0
  right 0
  width $side-panel-width
  z-index 1000
  border-left 1px solid white
  .header
    background-color $primary-color
    height $subheader-height
    color white
    padding 10px

.side-panel-body
  width 100%
  position absolute
  top $subheader-height
  bottom 0
  overflow-y scroll
  margin-bottom 0
  color white

.section-head
  margin 0 auto
  padding 0 5px
  width 100%
  border-top 1px solid white
  border-bottom 1px solid white
  background-color white
  color $primary-color-light
  font-weight bold
  line-height 2em
  display inline-block

  .controls
    float right
    font-weight normal

.summary-section ol
  margin-top 10px


.bioevent-panel-title
  display inline-block

.bioevent-item
  background-color $primary-color
  color white
  line-height 0
  margin-top 5px
  h6
    padding 10px
    margin-bottom 0
  a
    color white
  .timeline-container
  .minimap
    margin 0
    display inline-block
    background $primary-color-light
    height 150px
    width 50%
  .minimap
    background #c1d5e1
  .timeline
    height 128px

.bioevent-item:first-of-type
  margin-top 1px

.side-panel-body
  background $primary-color-light

.rank-data
  font-size .5em

.rank-score
  cursor pointer

.navbar-header
  flex 1

.navbar-brand
  bg('/images/ibis-logo-sm.png', 102px, 30px)

.search-bar
  display inline-block
  flex 2
  .input-group-text
    background transparent

.search-results
  position absolute
  background white
  z-index 1001
  border 1px solid lightgray
  padding 5px 10px
  .result i
    margin 0 10px 0 5px
    color $primary-color

.links
  text-align right
  flex 2
  a
    border 1px solid lightgray
    color inherit

.show-origins
.show-destinations
  cursor pointer

.configuration-container
  margin 1em 2%

.configuration
  .btn
    color black
    border 1px solid lightgray
    &.active
      background-color $primary-color-light
      color white

.summary-section ol
  a
    color white
  .other-rank
    color lightgray
  .value
    float right
    margin-right 10px

.input-box
  width 40em

.log-in-help-panel
  position relative
  background-color aliceblue
  border-top 1px solid $primary-color
  border-bottom 1px solid $primary-color
  left 0
  right 0
  padding-top 10px
  padding-left 55px
  font-size 15px
  margin-bottom 10px
  .fa-arrow-up
    float right
    margin-right 38px
    font-size 3em

.help-panel
  position absolute
  z-index 1000
  background-color aliceblue
  border-bottom 1px solid white
  left 0px
  right $side-panel-width
  padding-top 10px
  padding-left 55px
  top 0px
  font-size 15px
  min-height 55px
  h3
    font-size 1.3em
  .close
    float right

.filter-map
  float right
  font-size 28px
  cursor pointer

@keyframes logo-animation {
    0%   {
      transform translate(10px, 10px)
      background #69a273
      border-width 7px
    }
    25% {
      transform translate(0px, 0px)
      background white
      border-width 0
    }
    50% {
      transform translate(-10px, -10px)
      background #69a273
      border-width 7px
    }
    75% {
      transform translate(0px, 0px)
      background white
      border-width 0
    }
    100% {
      transform translate(10px, 10px)
      background #69a273
      border-width 7px
    }
}

.loading-overlay
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  z-index 1002
  background-color rgba(255, 255, 255, 0.2)
  .loading-dialog
    margin auto
    position absolute
    top 50%
    left 50%
    padding 10px
    padding-top 15px
    padding-bottom 6px
    border-radius 4px
    background white
    border 1px solid gray
    .message
      margin-top 40px
      font-weight bold
      text-align center
    .detailed-message
      text-align center
      max-width 250px
      
  .loading-indicator
    position absolute
    left calc(50% - 15px)
    width 30px
    height 30px
    transform rotate(-45deg)
    background #69a273
    clip rect(0px, 30px, 30px, 0px)
    &::before
      content ""
      border 7px solid white
      width 100%
      height 100%
      display block
      animation logo-animation 4s infinite

.bioevent-filter
  margin-left 5px
  cursor pointer

#filter-modal .min-disease-severity
  max-width 100%

.login-btn
  z-index 1002 !important
  #login-dropdown-list
    z-index 1002
    right -1px
    top 30px
    left initial
    white-space normal
    .login-button
      border-color lightgray
      background-color white
      color black

.admin
  .container
    border 1px solid lightgray
    margin 1em
    border-radius 4px
    padding-top .5em
  .user
  .btn
    margin-bottom 1em

.lemis
  $lemis-side-panel-width = 375px
  .side-panel
    width $lemis-side-panel-width
  .subheader
    width "calc(100% - %s)" % $lemis-side-panel-width
  .help-panel
    right $lemis-side-panel-width
  .unit
    float right
    margin-right 10px
  .location
    cursor pointer
    &:hover
      text-decoration underline

.submit-bioevent
  margin 1em auto
  display block
  width 800px
  textarea
    display block
    margin-bottom 1em
    width 100%
    height 400px
  .btn
    float right